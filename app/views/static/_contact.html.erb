<section class="section fp-auto-height-responsive">
  <div class="contact vertically-aligned">
    <div class="contact__details">
      <div class="contact__number">Office +44 1359 271 546</div>
      <div class="contact__number">Mobile +44 7545 839 355</div>
      <%= mail_to "paul@ansontimberworks.co.uk", "paul@ansontimberworks.co.uk", class: "contact__email contact__email--margin-top" %>
      <%= mail_to "info@ansontimberworks.co.uk", "info@ansontimberworks.co.uk", class: "contact__email" %>

      <%= link_to "https://goo.gl/maps/bY7opyzrzSU2", target: "_blank", class: "contact__address" do %>
        Woolands Business Park<br>
        Rougham Industrial Estate<br>
        Bury St. Edmunds, Suffolk,<br>
        IP30 9ND
      <% end %>

      <ul class="social">
        <li class="social__item">
          <%= link_to inline_svg("linkedin.svg", class: "social__icon"), "https://www.linkedin.com/company/anson-timberworks-limited/", target: "_blank" %>
        </li>
        <li class="social__item">
          <%= link_to inline_svg("twitter.svg", class: "social__icon"), "https://twitter.com/ansontimber", target: "_blank" %>
        </li>
        <li class="social__item">
          <%= link_to inline_svg("facebook.svg", class: "social__icon"), "https://www.facebook.com/ansontimberworks", target: "_blank" %>
        </li>
        <li class="social__item">
          <%= link_to inline_svg("instagram.svg", class: "social__icon"), "https://www.instagram.com/ansontimberworks/", target: "_blank" %>
        </li>
      </ul>
    </div>
  </div>

  <div class="footer">
    <p class="footer__copy">
    &copy; <%= Time.current.year %> Anson Timberworks
    <% cache @legal_pages do %>
      <%= render @legal_pages %>
    <% end %>
    </p>
  </div>
</section>
